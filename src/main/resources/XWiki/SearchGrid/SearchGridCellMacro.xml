    <property>
      <code>.searchgrid-grid-cell {
  border: 1px solid @xwiki-border-color;
  padding: 0.6rem 1rem;
  display: grid;
  &amp;.searchgrid-grid-cell-row {
    display: flex !important; /** "important" is set in case there are other SearchGrids on the same page with several columns per row, and a display possibly different from "flex". */
    align-items: center;
    p {
      margin: 0;
    }
    .searchgrid-grid-cell-column {
      flex: 1 1 150px;
      margin-right: 1rem;
    }
  }
}

