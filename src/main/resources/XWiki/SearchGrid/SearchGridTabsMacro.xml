      <code>require(['jquery', 'bootstrap'], function($) {
  'use strict';
  $('.nav-tabs a').on('click', (e) =&gt; {
      e.preventDefault();
      $(this).tab('show');
    }
  );

  $(document).on('xwiki:searchgrid:instanceCreated',
    (event, data) =&gt; {
      //const liveTable = $(`#${data.id}`);
      //const solrLiveTableTabsId = liveTable.parents('.solr-livetable-tabs').attr('id');
      $(".nav-tabs &gt; li &gt; a").on("shown.bs.tab", function(e) {
        // Reflect the currently selected tab in the hash value without scrolling to the id
        const href = $(e.target).attr("href");
        if(history.pushState) {
          history.replaceState(null, null, href);
        } else {
          location.hash = href;
        }
        const activeTab = $(e.target);
        //const searchGridTabsId = activeTab.parents('.searchgrid-tabs').attr('id');
        const searchGridId = activeTab.attr('data-searchgrid-id');
        /** Copy the tab query attribute to the SearchGrid element. */
        const $searchGrid = $(`#${searchGridId}`);
        $searchGrid.attr('data-query', activeTab.attr('data-query'));
        $searchGrid.attr('data-facets', activeTab.attr('data-facets'));
        $(document).trigger('xwiki:searchgrid:search', {id: `${searchGridId}`});
      });

      /** For now we don't use hash because it gets mixed up with other hashes. TODO: find good way to represent
       * state in hash. */
